{% extends 'base.html.twig' %}

{% block title %}Quack{% endblock %}

{% block body %}
    <h1>Quack</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Author</th>
                <td>{{ quack.author }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ quack.message }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ quack.picture }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ quack.datetime|date }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ quack.tags }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('quack_index') }}">back to list</a>

    <a href="{{ path('quack_edit', {'id': quack.id}) }}">edit</a>

    {{ include('quack/_delete_form.html.twig') }}
